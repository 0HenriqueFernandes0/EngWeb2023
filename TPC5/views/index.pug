extends layout

block content
  body
    .w3-container.w3-teal
      h4 Input task
    form.w3-container(method="post")

      label.w3-text-teal
        b Nome
      input.w3-input.w3-border.w3-light-grey(name="nome" type="text" value="")

      label.w3-text-teal
        b Task Description
      input.w3-input.w3-border.w3-light-grey(name="TaskDescription" type="text" value="")
                    
      label.w3-text-teal
        b Choose the date limit to do the task
      input.w3-input.w3-border.w3-light-grey(type="date" name="DateTask" min="0" value="")

      p          
      button.w3-btn.w3-blue.w3-mb-2(name="Done" value="0" type="submit") Submit
      p 
      
    header.w3-container.w3-teal
      h1 Task List   

    .w3-row.w3-col.w3-container.m6.l6
      table.w3-table-all
        tr
          th Nome
          th Task Description
          th DateTask
          th
        each task in t
          if task.Done==0
            tr
              td #{task.nome}
              td #{task.TaskDescription}
              td #{task.DateTask}
              td 
                a.button.w3-btn.w3-blue.w3-mb-2(href="/tasks/Done/${slist[i].id}" type="submit") Done
                a.button.w3-btn.w3-blue.w3-mb-2(href="/tasks/Edit/${slist[i].id}" type="submit") Edit
                a.button.w3-btn.w3-blue.w3-mb-2(href="/tasks/Delete/${slist[i].id}" type="submit") Delete

    .w3-col.w3-container.m6.l6 
      table.w3-table-all
        tr
          th Nome
          th Task Description
          th DateTask
          th
        each task in t
          if task.Done
            tr
              td #{task.nome}
              td #{task.TaskDescription}
              td #{task.DateTask}
              td 
                a.button.w3-btn.w3-blue.w3-mb-2(href="/tasks/Edit/${slist[i].id}" type="submit") Edit
                a.button.w3-btn.w3-blue.w3-mb-2(href="/tasks/Delete/${slist[i].id}" type="submit") Delete

    footer.w3-container.w3-teal
      h5 Generated by RPCW2023 in #{d}
    