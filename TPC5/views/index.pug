doctype html
html
  head
    meta(charset="UTF-8")
    link (rel="icon" href="favicon.png")
    link (rel="stylesheet" href="w3.css"/)
  body
    w3-container.w3-teal
      h1 Input task
    form.w3-container(method="post")

      label.w3-text-teal
        b Nome
      input.w3-input.w3-border.w3-light-grey(name="nome" type="text" value="")

      label.w3-text-teal
        b Task Description
      input.w3-input.w3-border.w3-light-grey(name="TaskDescription" type="text" value="")
                    
      label.w3-text-teal
        b Choose the date limit to do the task
      input.w3-input.w3-border.w3-light-grey(type="date" name="DateTask" min="0" value="")
                    
      button.w3-btn.w3-blue.w3-mb-2(name="Done" value="0" type="submit") Submit

    header.w3-container.w3-teal
      h3 Task List   

    .w3-row.w3-colw3-containerm6l6
      table.w3-table-all
        tr
          th Nome
          th Task Description
          th DateTask
                
    


    footer.w3-container.w3-teal
      h5 Generated by RPCW2023 in ${d}
    