extends layout

block content
    body
        .w3-card-4
            header.w3-container.w3-purple
                h2 Student Form
                
            form.w3-container(method="POST")
                fieldset
                    legend Metadata
                    label Name
                    input.w3-input.w3-round(type="text" name="nome" value=t.nome)
                    label TaskDescription
                    input.w3-input.w3-round(type="text" name="TaskDescription" value=t.TaskDescription)
                    label DateTask
                    input.w3-input.w3-round(type="text" name="DateTask" value=t.DateTask)
                    label Done(1-Verdadeiro,0-falso)
                    input.w3-input.w3-round(type="text" name="Done" value=t.Done)
                    
                    button.w3-btn.w3-purple.w3-mb-2(type="submit" href="/") Edit
                
                footer.w3-container.w3-purple
                    h5 Generated by EngWeb2023 in #{d} - 
                        a(href="/") Return